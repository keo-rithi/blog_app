<div id="page_wrapper">
<% @posts.each do |post| %>
  <div class="post_wrapper">
  <h2><%= link_to post.title, post %></h2>
  <p><%= post.created_at.strftime("%B %d, %Y") %></p>
  <p><%= truncate(post.body, :length => 250) %></p>
  </div>
  <br>
  <button><%= link_to "Read Post", post %></button>
<% end %>
</div>