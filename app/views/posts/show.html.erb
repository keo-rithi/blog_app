<div id="page_wrapper">
<h1><%= @post.title %></h1>

<p>
  Submitted <%= time_ago_in_words(@post.created_at) %> Ago.
</p>

<p>
  <%= @post.body %>
</p>

<div>
  <h2><%= @post.comments.count %> Comments</h2>
  <%= render @post.comments %>

  <h3>Add a comment:</h3>
  <%= render "comments/form" %><br>
</div>

<button><%= link_to "Edit Post", edit_post_path(@post) %></button>

<button><%= link_to "Delete Post", post_path(@post), method: :delete, data: { confirm: "Are you sure?"} %></button>

</div>